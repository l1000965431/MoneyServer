<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

       <bean id="MemCachService" class="memcach.MemCachService" >
              <property name="shardedPool" ref="shardedJedisPool"/>
       </bean>

       <bean id="jedisPoolConfig" class="redis.clients.jedis.JedisPoolConfig">
              <p:maxActive value="200" />
              <p:maxIdle   value="6" />
              <p:maxWait   value="15000"/>
              <p:minEvictableIdleTimeMillis value="300000"/>
              <p:numTestsPerEvictionRun value="3"/>
              <p:timeBetweenEvictionRunsMillis value="60000"/>
              <p:whenExhaustedAction value="1"/>
       </bean>

       <bean id = "shardedJedisPool" class = "redis.clients.jedis.ShardedJedisPool">
              <constructor-arg index="0" ref="jedisPoolConfig"/>
              <constructor-arg index="1">
                     <list>
                            <bean class="redis.clients.jedis.JedisShardInfo">
                                   <constructor-arg index="0" value="192.168.0.148"/>
                                   <constructor-arg index="1" value="6379" type="int"/>
                                   <constructor-arg index="2" value="3000" type="int"/>
                                   <!--<property name="password" value="${redis.password}"/> -->
                            </bean>
                     </list>
              </constructor-arg>
       </bean>

</beans>